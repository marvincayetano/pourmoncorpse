// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id    Int     @default(autoincrement()) @id
  name  String?
  gymUsername String
  gymPassword String
  email String  @unique
  phoneNum String  @unique
  prefSchedules PreferedSchedule[]
  schedules Schedule[]
}

model Schedule {
  id        Int     @default(autoincrement()) @id
  title     String
  content   String?
  date      DateTime
  user User?   @relation(fields: [userId], references: [id])
  userId Int?
}

model PreferedSchedule {
  id    Int     @default(autoincrement()) @id
  date  Day
  time  DateTime
  user User?   @relation(fields: [userId], references: [id])
  userId Int?
}

enum Day {
    Monday
    Tuesday
    Wednesday
    Thurday
    Friday
    Saturday
    Sunday
}